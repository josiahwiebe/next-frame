{
  "manifest_version": 3,
  "name": "Next Frame",
  "version": "1.0",
  "author": "JWWW",
  "description": "Measures time and frames between mouse events and DOM changes.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Next Frame"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ]
}